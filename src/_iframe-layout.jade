doctype html
html.no-js(lang="fr")
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    title= title

    link(href="/stylesheets/styleguide/styleguide.css" type="text/css" rel="stylesheet")
    link(href="/stylesheets/styleguide/lib/prism.css" type="text/css" rel="stylesheet")

    - var css = cssTheme ? "project-"+cssTheme+".css" : "project.css"
    link#theme(href="/stylesheets/#{css}" type="text/css" rel="stylesheet")

    script(src="/javascript/lib/modernizr.custom.js")

  - bodyAttributes = bodyAttributes || {}

  body&attributes(bodyAttributes)
    .lsg-content-wrapper
      block main

    script
      include ./javascript/locales.js
    script
      include ./javascript/config.js
    script(src="/javascript/lib/jquery-2.1.4.min.js")
    script(src="/javascript/project.js")

    script(src="/javascript/styleguide/lib/beautify-html.js")
    script(src="/javascript/styleguide/lib/prism.js")
    script(src="/javascript/styleguide/styleguide.js")
